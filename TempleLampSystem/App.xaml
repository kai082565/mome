<Application x:Class="TempleLampSystem.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:TempleLampSystem.Helpers">
    <Application.Resources>
        <ResourceDictionary>
            <!-- ══════════════════════════════════════ -->
            <!-- 廟宇色彩主題 -->
            <!-- ══════════════════════════════════════ -->
            <Color x:Key="PrimaryColor">#D4A574</Color>
            <Color x:Key="PrimaryDarkColor">#B8956A</Color>
            <Color x:Key="SecondaryColor">#6B1A1A</Color>
            <Color x:Key="AccentColor">#C41E3A</Color>
            <Color x:Key="GoldColor">#DAA520</Color>
            <Color x:Key="GoldLightColor">#FFD700</Color>
            <Color x:Key="GoldDarkColor">#B8860B</Color>
            <Color x:Key="SuccessColor">#2E7D32</Color>
            <Color x:Key="WarningColor">#E65100</Color>
            <Color x:Key="BackgroundColor">#FBF3E4</Color>
            <Color x:Key="CardColor">#FFFCF5</Color>
            <Color x:Key="BorderColor">#D4A574</Color>
            <Color x:Key="TextPrimaryColor">#2C1810</Color>
            <Color x:Key="TextSecondaryColor">#6D4C41</Color>

            <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
            <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>
            <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
            <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
            <SolidColorBrush x:Key="GoldBrush" Color="{StaticResource GoldColor}"/>
            <SolidColorBrush x:Key="GoldLightBrush" Color="{StaticResource GoldLightColor}"/>
            <SolidColorBrush x:Key="GoldDarkBrush" Color="{StaticResource GoldDarkColor}"/>
            <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
            <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
            <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
            <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}"/>
            <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
            <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
            <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>

            <!-- 漸層筆刷 -->
            <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#4A0E0E" Offset="0"/>
                <GradientStop Color="#6B1A1A" Offset="0.5"/>
                <GradientStop Color="#4A0E0E" Offset="1"/>
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="GoldGradient" StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="#B8860B" Offset="0"/>
                <GradientStop Color="#FFD700" Offset="0.3"/>
                <GradientStop Color="#DAA520" Offset="0.7"/>
                <GradientStop Color="#B8860B" Offset="1"/>
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FFFCF5" Offset="0"/>
                <GradientStop Color="#FFF8ED" Offset="1"/>
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="ButtonGoldGradient" StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#DAA520" Offset="0"/>
                <GradientStop Color="#B8860B" Offset="1"/>
            </LinearGradientBrush>

            <!-- 全域字體 -->
            <FontFamily x:Key="PrimaryFont">Microsoft JhengHei UI, Microsoft JhengHei</FontFamily>

            <!-- ══════════════════════════════════════ -->
            <!-- 按鈕樣式 -->
            <!-- ══════════════════════════════════════ -->
            <Style TargetType="Button">
                <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Padding" Value="18,10"/>
                <Setter Property="Margin" Value="3"/>
                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderBrush" Value="{StaticResource PrimaryDarkBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="6" ShadowDepth="2" Opacity="0.15" Direction="270"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                                    RenderOptions.ClearTypeHint="Enabled"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
                                    <Setter TargetName="border" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.25" Direction="270"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource SecondaryBrush}"/>
                                    <Setter TargetName="border" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="3" ShadowDepth="1" Opacity="0.2" Direction="270"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Background" Value="#C8C0B8"/>
                                    <Setter Property="Foreground" Value="#9E9690"/>
                                    <Setter TargetName="border" Property="Effect" Value="{x:Null}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- 主要操作按鈕 - 廟宇紅 -->
            <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                <Setter Property="BorderBrush" Value="#A01830"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1.5"
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.2" Direction="270" Color="#8B0000"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                                    RenderOptions.ClearTypeHint="Enabled"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#A01830"/>
                                    <Setter TargetName="border" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="12" ShadowDepth="3" Opacity="0.35" Direction="270" Color="#8B0000"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#801020"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Background" Value="#C8C0B8"/>
                                    <Setter Property="Foreground" Value="#9E9690"/>
                                    <Setter TargetName="border" Property="Effect" Value="{x:Null}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- 成功按鈕 -->
            <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                <Setter Property="BorderBrush" Value="#1B5E20"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1.5"
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.2" Direction="270" Color="#1B5E20"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                                    RenderOptions.ClearTypeHint="Enabled"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#1B5E20"/>
                                    <Setter TargetName="border" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="12" ShadowDepth="3" Opacity="0.35" Direction="270" Color="#1B5E20"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#0D3D10"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Background" Value="#C8C0B8"/>
                                    <Setter Property="Foreground" Value="#9E9690"/>
                                    <Setter TargetName="border" Property="Effect" Value="{x:Null}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- 金色按鈕（特殊用途） -->
            <Style x:Key="GoldButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                <Setter Property="Background" Value="{StaticResource ButtonGoldGradient}"/>
                <Setter Property="BorderBrush" Value="{StaticResource GoldDarkBrush}"/>
                <Setter Property="Foreground" Value="#3E1A00"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1.5"
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.2" Direction="270" Color="#B8860B"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                                    RenderOptions.ClearTypeHint="Enabled"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource GoldBrush}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource GoldDarkBrush}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- ══════════════════════════════════════ -->
            <!-- 文字輸入框樣式 -->
            <!-- ══════════════════════════════════════ -->
            <Style TargetType="TextBox">
                <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="12,10"/>
                <Setter Property="Margin" Value="3"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderBrush" Value="#D4B896"/>
                <Setter Property="BorderThickness" Value="1.5"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.08" Direction="270"/>
                                </Border.Effect>
                                <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"
                                                            RenderOptions.ClearTypeHint="Enabled"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource GoldBrush}"/>
                                </Trigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource GoldBrush}"/>
                                    <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                    <Setter TargetName="border" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.2" Color="#DAA520"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- 下拉選單樣式 -->
            <Style TargetType="ComboBox">
                <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="12,10"/>
                <Setter Property="Margin" Value="3"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderBrush" Value="#D4B896"/>
                <Setter Property="BorderThickness" Value="1.5"/>
            </Style>

            <!-- ══════════════════════════════════════ -->
            <!-- 群組框樣式 - 廟宇牌匾風格 -->
            <!-- ══════════════════════════════════════ -->
            <Style TargetType="GroupBox">
                <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="GroupBox">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- 標題 - 牌匾風格 -->
                                <Border Grid.Row="0"
                                        Background="{StaticResource HeaderGradient}"
                                        CornerRadius="12,12,0,0"
                                        Padding="0"
                                        BorderBrush="{StaticResource GoldDarkBrush}"
                                        BorderThickness="1.5,1.5,1.5,0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <!-- 上方金邊 -->
                                        <Border Height="3" Background="{StaticResource GoldGradient}"/>
                                        <!-- 標題文字 -->
                                        <Border Grid.Row="1" Padding="20,12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="&#x2726;" Foreground="#DAA520" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                <ContentPresenter Grid.Column="1" ContentSource="Header"
                                                                  TextBlock.Foreground="#FFD700"
                                                                  TextBlock.FontWeight="Bold"
                                                                  TextBlock.FontSize="16"/>
                                                <TextBlock Grid.Column="2" Text="&#x2726;" Foreground="#DAA520" FontSize="14" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                            </Grid>
                                        </Border>
                                        <!-- 下方金邊 -->
                                        <Border Grid.Row="2" Height="2" Background="{StaticResource GoldGradient}"/>
                                    </Grid>
                                </Border>

                                <!-- 內容區域 -->
                                <Border Grid.Row="1"
                                        Background="{StaticResource CardGradient}"
                                        CornerRadius="0,0,12,12"
                                        Padding="5"
                                        BorderBrush="{StaticResource GoldDarkBrush}"
                                        BorderThickness="1.5,0,1.5,1.5">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.15" Direction="270"/>
                                    </Border.Effect>
                                    <ContentPresenter RenderOptions.ClearTypeHint="Enabled"/>
                                </Border>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- 捲動平滑化 -->
            <Style TargetType="ScrollViewer">
                <Setter Property="CanContentScroll" Value="False"/>
            </Style>

            <!-- ══════════════════════════════════════ -->
            <!-- 列表視圖樣式 -->
            <!-- ══════════════════════════════════════ -->
            <Style TargetType="ListView">
                <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="ScrollViewer.CanContentScroll" Value="False"/>
                <Setter Property="VirtualizingPanel.ScrollUnit" Value="Pixel"/>
                <Setter Property="helpers:SmoothScrollBehavior.IsEnabled" Value="True"/>
            </Style>

            <Style TargetType="ListViewItem">
                <Setter Property="Padding" Value="8"/>
                <Setter Property="Margin" Value="3,3"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListViewItem">
                            <Border x:Name="border"
                                    Background="White"
                                    BorderBrush="#E0D0B8"
                                    BorderThickness="1"
                                    CornerRadius="10"
                                    Padding="{TemplateBinding Padding}"
                                    Margin="{TemplateBinding Margin}">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="6" ShadowDepth="1" Opacity="0.08" Direction="270"/>
                                </Border.Effect>
                                <ContentPresenter RenderOptions.ClearTypeHint="Enabled"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FFF8DC"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource GoldBrush}"/>
                                    <Setter TargetName="border" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.15" Direction="270" Color="#DAA520"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FFF3D6"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource GoldBrush}"/>
                                    <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                    <Setter TargetName="border" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="12" ShadowDepth="2" Opacity="0.2" Direction="270" Color="#DAA520"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- 狀態列樣式 -->
            <Style TargetType="StatusBar">
                <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
                <Setter Property="Background" Value="{StaticResource HeaderGradient}"/>
                <Setter Property="Foreground" Value="#E8D5B5"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
