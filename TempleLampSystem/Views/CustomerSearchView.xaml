<UserControl x:Class="TempleLampSystem.Views.CustomerSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:TempleLampSystem.Converters">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:OrderStatusToColorConverter x:Key="StatusToColor"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 搜尋列 -->
        <Border Grid.Row="0"
                CornerRadius="10"
                Padding="18,14"
                Margin="0,8,0,15"
                BorderBrush="{StaticResource GoldDarkBrush}"
                BorderThickness="1.5">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFF8ED" Offset="0"/>
                    <GradientStop Color="#FFF0D6" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1" Direction="270"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="&#x2726;" FontSize="16" Foreground="{StaticResource GoldDarkBrush}" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="搜尋"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="{StaticResource SecondaryBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>
                </StackPanel>

                <TextBox Grid.Column="1"
                         Text="{Binding SearchPhone, UpdateSourceTrigger=PropertyChanged}"
                         VerticalContentAlignment="Center"
                         FontSize="15">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="搜尋"
                            Command="{Binding SearchCommand}"
                            Style="{StaticResource PrimaryButton}"
                            Padding="28,10"
                            Margin="10,0,0,0"/>
                    <Button Content="+ 新增客戶"
                            Command="{Binding AddCustomerCommand}"
                            Style="{StaticResource SuccessButton}"
                            Padding="28,10"
                            Margin="5,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 客戶列表 -->
        <ListView Grid.Row="1"
                  x:Name="CustomerListView"
                  ItemsSource="{Binding Customers}"
                  SelectedItem="{Binding SelectedCustomer}"
                  SelectionMode="Extended"
                  SelectionChanged="CustomerListView_SelectionChanged"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 左側裝飾條 -->
                        <Border Width="4" CornerRadius="2" Margin="0,0,12,0"
                                VerticalAlignment="Stretch">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#DAA520" Offset="0"/>
                                    <GradientStop Color="#B8860B" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>

                        <StackPanel Grid.Column="1">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding CustomerCode}"
                                           FontSize="13"
                                           Foreground="{StaticResource GoldDarkBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"
                                           FontFamily="Consolas"/>
                                <TextBlock Text="{Binding Name}"
                                           FontSize="17"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource SecondaryBrush}"
                                           TextDecorations="Underline"
                                           Cursor="Hand"
                                           MouseLeftButtonDown="CustomerName_Click"
                                           ToolTip="點擊查看詳細資料"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="&#x260E;" FontSize="13" Foreground="{StaticResource GoldDarkBrush}" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding DisplayPhone}"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="13"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                <TextBlock Text="&#x2302;" FontSize="14" Foreground="{StaticResource GoldDarkBrush}" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Address}"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="12"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- 狀態列 -->
        <Border Grid.Row="2"
                CornerRadius="8"
                Padding="14,10"
                Margin="0,10,0,0"
                BorderBrush="{StaticResource GoldDarkBrush}"
                BorderThickness="1">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#FFF8ED" Offset="0"/>
                    <GradientStop Color="#FFF0D6" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="&#x2726;" FontSize="11" Foreground="{StaticResource GoldDarkBrush}" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="12"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
