<UserControl x:Class="TempleLampSystem.Views.CustomerSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:TempleLampSystem.Converters">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:OrderStatusToColorConverter x:Key="StatusToColor"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 搜尋列 -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="電話號碼："
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>

            <TextBox Grid.Column="1"
                     Text="{Binding SearchPhone, UpdateSourceTrigger=PropertyChanged}"
                     VerticalContentAlignment="Center"
                     Padding="5"
                     FontSize="14">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                </TextBox.InputBindings>
            </TextBox>

            <Button Grid.Column="2"
                    Content="搜尋"
                    Command="{Binding SearchCommand}"
                    Padding="20,5"
                    Margin="10,0,0,0"/>
        </Grid>

        <!-- 客戶列表 -->
        <ListView Grid.Row="1"
                  ItemsSource="{Binding Customers}"
                  SelectedItem="{Binding SelectedCustomer}"
                  SelectionMode="Single"
                  BorderThickness="1"
                  BorderBrush="#DDD">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#DDD"
                            BorderThickness="0,0,0,1"
                            Padding="10"
                            Margin="0,0,0,5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- 客戶基本資訊 -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Margin="0,0,15,0"/>
                                <TextBlock Text="{Binding DisplayPhone}"
                                           Foreground="Gray"
                                           VerticalAlignment="Center"/>
                                <Border Background="#4CAF50"
                                        CornerRadius="10"
                                        Padding="8,2"
                                        Margin="10,0,0,0"
                                        Visibility="{Binding ActiveOrderCount, Converter={StaticResource BoolToVisibility}}">
                                    <TextBlock Text="{Binding ActiveOrderCount, StringFormat='{}{0} 個有效點燈'}"
                                               Foreground="White"
                                               FontSize="11"/>
                                </Border>
                            </StackPanel>

                            <!-- 地址 -->
                            <TextBlock Grid.Row="1"
                                       Text="{Binding Address}"
                                       Foreground="Gray"
                                       FontSize="12"
                                       Margin="0,5,0,0"/>

                            <!-- 點燈紀錄 -->
                            <ItemsControl Grid.Row="2"
                                          ItemsSource="{Binding Orders}"
                                          Margin="0,10,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F5F5F5"
                                                CornerRadius="5"
                                                Padding="10,5"
                                                Margin="0,2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding Year, StringFormat='{}{0}年'}"
                                                           FontWeight="SemiBold"
                                                           Margin="0,0,10,0"/>

                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding LampName}"/>

                                                <TextBlock Grid.Column="2"
                                                           Text="{Binding Price, StringFormat='${0:N0}'}"
                                                           Margin="0,0,15,0"/>

                                                <TextBlock Grid.Column="3"
                                                           Text="{Binding StatusText}"
                                                           Foreground="{Binding EndDate, Converter={StaticResource StatusToColor}}"
                                                           FontWeight="SemiBold"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- 狀態列 -->
        <TextBlock Grid.Row="2"
                   Text="{Binding StatusMessage}"
                   Foreground="Gray"
                   Margin="0,10,0,0"/>
    </Grid>
</UserControl>
