<UserControl x:Class="TempleLampSystem.Views.CustomerSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:TempleLampSystem.Converters">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:OrderStatusToColorConverter x:Key="StatusToColor"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 搜尋列 -->
        <Border Grid.Row="0"
                Background="#FFF8F0"
                CornerRadius="10"
                Padding="15"
                Margin="0,5,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="搜尋" FontSize="15" FontWeight="SemiBold" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <TextBlock Text="電話搜尋"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,15,0"/>
                </StackPanel>

                <TextBox Grid.Column="1"
                         Text="{Binding SearchPhone, UpdateSourceTrigger=PropertyChanged}"
                         VerticalContentAlignment="Center"
                         FontSize="15">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="搜尋"
                            Command="{Binding SearchCommand}"
                            Style="{StaticResource PrimaryButton}"
                            Padding="25,10"
                            Margin="10,0,0,0"/>
                    <Button Content="+ 新增客戶"
                            Command="{Binding AddCustomerCommand}"
                            Style="{StaticResource SuccessButton}"
                            Padding="25,10"
                            Margin="5,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 客戶列表（按住 Ctrl 可多選）-->
        <ListView Grid.Row="1"
                  x:Name="CustomerListView"
                  ItemsSource="{Binding Customers}"
                  SelectedItem="{Binding SelectedCustomer}"
                  SelectionMode="Extended"
                  SelectionChanged="CustomerListView_SelectionChanged"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="■" FontSize="14" Foreground="{StaticResource PrimaryBrush}" Margin="0,0,8,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Name}"
                                           FontSize="17"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource SecondaryBrush}"
                                           TextDecorations="Underline"
                                           Cursor="Hand"
                                           MouseLeftButtonDown="CustomerName_Click"
                                           ToolTip="點擊查看詳細資料"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="24,3,0,0">
                                <TextBlock Text="電話：" FontSize="12" Margin="0,0,2,0" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Text="{Binding DisplayPhone}"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="13"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="24,3,0,0">
                                <TextBlock Text="地址：" FontSize="12" Margin="0,0,2,0" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Text="{Binding Address}"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="12"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- 狀態列 -->
        <Border Grid.Row="2"
                Background="White"
                CornerRadius="6"
                Padding="10,8"
                Margin="0,10,0,0">
            <TextBlock Text="{Binding StatusMessage}"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       FontSize="12"/>
        </Border>
    </Grid>
</UserControl>
