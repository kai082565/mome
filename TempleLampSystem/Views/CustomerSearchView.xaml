<UserControl x:Class="TempleLampSystem.Views.CustomerSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:TempleLampSystem.Converters">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:OrderStatusToColorConverter x:Key="StatusToColor"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- æœå°‹åˆ— -->
        <Border Grid.Row="0"
                Background="#FFF8F0"
                CornerRadius="10"
                Padding="15"
                Margin="0,5,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ”" FontSize="18" Margin="0,0,10,0"/>
                    <TextBlock Text="é›»è©±æœå°‹"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,15,0"/>
                </StackPanel>

                <TextBox Grid.Column="1"
                         Text="{Binding SearchPhone, UpdateSourceTrigger=PropertyChanged}"
                         VerticalContentAlignment="Center"
                         FontSize="15">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <Button Grid.Column="2"
                        Content="ðŸ”Ž æœå°‹"
                        Command="{Binding SearchCommand}"
                        Style="{StaticResource PrimaryButton}"
                        Padding="25,10"
                        Margin="10,0,0,0"/>
            </Grid>
        </Border>

        <!-- å®¢æˆ¶åˆ—è¡¨ï¼ˆæŒ‰ä½ Ctrl å¯å¤šé¸ï¼‰-->
        <ListView Grid.Row="1"
                  x:Name="CustomerListView"
                  ItemsSource="{Binding Customers}"
                  SelectedItem="{Binding SelectedCustomer}"
                  SelectionMode="Extended"
                  SelectionChanged="CustomerListView_SelectionChanged"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- å®¢æˆ¶åŸºæœ¬è³‡è¨Š -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ‘¤" FontSize="16" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding Name}"
                                               FontSize="17"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="24,3,0,0">
                                    <TextBlock Text="ðŸ“ž" FontSize="12" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding DisplayPhone}"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontSize="13"/>
                                </StackPanel>
                            </StackPanel>

                            <Border Grid.Column="1"
                                    Background="{StaticResource SuccessBrush}"
                                    CornerRadius="12"
                                    Padding="12,4"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding ActiveOrderCount, Converter={StaticResource BoolToVisibility}}">
                                <TextBlock Text="{Binding ActiveOrderCount, StringFormat='ðŸª” {0} ç›ž'}"
                                           Foreground="White"
                                           FontSize="12"
                                           FontWeight="SemiBold"/>
                            </Border>
                        </Grid>

                        <!-- åœ°å€ -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="24,8,0,0">
                            <TextBlock Text="ðŸ“" FontSize="12" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding Address}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="12"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <!-- é»žç‡ˆç´€éŒ„ -->
                        <ItemsControl Grid.Row="2"
                                      ItemsSource="{Binding Orders}"
                                      Margin="0,12,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FFF8DC"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Padding="12,8"
                                            Margin="0,3">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Background="{StaticResource SecondaryBrush}"
                                                    CornerRadius="4"
                                                    Padding="8,2"
                                                    VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Year, StringFormat='{}{0}å¹´'}"
                                                           FontWeight="Bold"
                                                           FontSize="12"
                                                           Foreground="White"/>
                                            </Border>

                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding LampName}"
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       VerticalAlignment="Center"
                                                       Margin="12,0,0,0"/>

                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding Price, StringFormat='NT$ {0:N0}'}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,15,0"/>

                                            <Border Grid.Column="3"
                                                    CornerRadius="4"
                                                    Padding="8,2"
                                                    VerticalAlignment="Center">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#E8F5E9"/>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding StatusText}"
                                                           Foreground="{Binding EndDate, Converter={StaticResource StatusToColor}}"
                                                           FontWeight="SemiBold"
                                                           FontSize="12"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- ç‹€æ…‹åˆ— -->
        <Border Grid.Row="2"
                Background="White"
                CornerRadius="6"
                Padding="10,8"
                Margin="0,10,0,0">
            <TextBlock Text="{Binding StatusMessage}"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       FontSize="12"/>
        </Border>
    </Grid>
</UserControl>
