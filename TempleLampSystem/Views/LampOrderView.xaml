<UserControl x:Class="TempleLampSystem.Views.LampOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:TempleLampSystem.Converters"
             xmlns:helpers="clr-namespace:TempleLampSystem.Helpers">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
        <converters:OrderStatusToColorConverter x:Key="StatusToColor"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibility"/>
        <converters:NotNullToVisibilityConverter x:Key="NotNullToVisibility"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  helpers:SmoothScrollBehavior.IsEnabled="True">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 已選客戶資訊 -->
            <Border Grid.Row="0"
                    CornerRadius="10"
                    Padding="15"
                    Margin="0,8,0,15"
                    MaxHeight="350"
                    BorderBrush="{StaticResource GoldDarkBrush}"
                    BorderThickness="1.5">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FFFCF5" Offset="0"/>
                        <GradientStop Color="#FFF8ED" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.12" Direction="270"/>
                </Border.Effect>
                <Grid>
                    <!-- 未選擇客戶時 -->
                    <StackPanel Visibility="{Binding SelectedCustomer, Converter={StaticResource NullToVisibility}}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="0,15">
                        <TextBlock Text="&#x2726;" FontSize="32" HorizontalAlignment="Center" Foreground="{StaticResource GoldBrush}" Opacity="0.5"/>
                        <TextBlock Text="請從左側選擇客戶（按住 Ctrl 可多選）"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0"/>
                    </StackPanel>

                    <!-- 已選擇客戶時 -->
                    <ScrollViewer Visibility="{Binding SelectedCustomer, Converter={StaticResource NotNullToVisibility}}"
                                  VerticalScrollBarVisibility="Auto"
                                  MaxHeight="310">
                        <ItemsControl ItemsSource="{Binding SelectedCustomers}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="8"
                                            Padding="12,10"
                                            Margin="0,0,0,6"
                                            BorderBrush="{StaticResource GoldDarkBrush}"
                                            BorderThickness="1">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#FFF8ED" Offset="0"/>
                                                <GradientStop Color="#FFF0D6" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Width="4" CornerRadius="2" Margin="0,0,10,0"
                                                    VerticalAlignment="Stretch">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                        <GradientStop Color="#DAA520" Offset="0"/>
                                                        <GradientStop Color="#B8860B" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                            </Border>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock FontSize="11"
                                                               Foreground="{StaticResource GoldDarkBrush}"
                                                               Text="{Binding CustomerCode}"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,8,0"
                                                               FontFamily="Consolas"/>
                                                    <TextBlock FontSize="15"
                                                               FontWeight="Bold"
                                                               Foreground="{StaticResource SecondaryBrush}"
                                                               Text="{Binding Name}"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                    <TextBlock Text="&#x260E;" FontSize="11" Foreground="{StaticResource GoldDarkBrush}" Margin="0,0,4,0" VerticalAlignment="Center"/>
                                                    <TextBlock Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"
                                                               Text="{Binding DisplayPhone, Mode=OneWay}"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <Button Grid.Column="2"
                                                    Content="&#x2715;"
                                                    FontSize="13"
                                                    FontWeight="Bold"
                                                    Foreground="#B8956A"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    VerticalAlignment="Center"
                                                    Padding="8,4"
                                                    ToolTip="移除此客戶"
                                                    Command="{Binding DataContext.RemoveSelectedCustomerCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- 點燈表單 -->
            <Border Grid.Row="1"
                    CornerRadius="10"
                    Padding="18"
                    Margin="0,0,0,15"
                    BorderBrush="{StaticResource GoldDarkBrush}"
                    BorderThickness="1.5">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FFFCF5" Offset="0"/>
                        <GradientStop Color="#FFF8ED" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.12" Direction="270"/>
                </Border.Effect>
                <StackPanel>
                    <!-- 區塊標題 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,18">
                        <TextBlock Text="&#x2726;" FontSize="14" Foreground="{StaticResource GoldDarkBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="新增點燈"
                                   FontSize="17"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource SecondaryBrush}"/>
                    </StackPanel>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 燈種選擇 -->
                        <TextBlock Grid.Row="0"
                                   Text="燈種"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Foreground="{StaticResource SecondaryBrush}"/>
                        <ComboBox Grid.Row="0" Grid.Column="1"
                                  ItemsSource="{Binding Lamps}"
                                  SelectedItem="{Binding SelectedLamp}"
                                  DisplayMemberPath="LampName"
                                  FontSize="16"
                                  Padding="12,10"
                                  Margin="0,0,0,12"/>

                        <!-- 名額資訊 -->
                        <Border Grid.Row="1" Grid.Column="1"
                                Margin="0,0,0,12"
                                Visibility="{Binding QuotaInfo, Converter={StaticResource NotNullToVisibility}}">
                            <TextBlock Text="{Binding QuotaInfo}" FontSize="14" FontWeight="SemiBold"
                                       Padding="4,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#2E7D32"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CannotOrderReason}" Value="{x:Null}">
                                                <Setter Property="Foreground" Value="#2E7D32"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Border>

                        <!-- 宮廟別 -->
                        <TextBlock Grid.Row="2"
                                   Text="宮廟別"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Foreground="{StaticResource SecondaryBrush}"/>
                        <Border Grid.Row="2" Grid.Column="1"
                                Background="White"
                                BorderBrush="#D4B896"
                                BorderThickness="1.5"
                                CornerRadius="4"
                                Padding="12,10"
                                Margin="3,3,3,12">
                            <TextBlock Text="{Binding SelectedTemple, TargetNullValue='（選擇燈種後自動帶入）'}"
                                       FontSize="16"
                                       VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource SecondaryBrush}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedTemple}" Value="{x:Null}">
                                                <Setter Property="Foreground" Value="#999999"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Border>

                        <!-- 神明別 -->
                        <TextBlock Grid.Row="3"
                                   Text="神明別"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Foreground="{StaticResource SecondaryBrush}"/>
                        <Border Grid.Row="3" Grid.Column="1"
                                Background="White"
                                BorderBrush="#D4B896"
                                BorderThickness="1.5"
                                CornerRadius="4"
                                Padding="12,10"
                                Margin="3,3,3,12">
                            <TextBlock Text="{Binding SelectedDeity, TargetNullValue='（選擇燈種後自動帶入）'}"
                                       FontSize="16"
                                       VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource SecondaryBrush}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedDeity}" Value="{x:Null}">
                                                <Setter Property="Foreground" Value="#999999"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Border>

                        <!-- 金額 -->
                        <TextBlock Grid.Row="4"
                                   Text="金額"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Foreground="{StaticResource SecondaryBrush}"/>
                        <Grid Grid.Row="4" Grid.Column="1" Margin="0,0,0,12">
                            <TextBox Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="12,10,40,10"
                                     FontSize="16"/>
                            <TextBlock Text="元"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       Margin="0,0,15,0"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource GoldDarkBrush}"/>
                        </Grid>

                        <!-- 備註（僅闔家平安燈顯示） -->
                        <TextBlock Grid.Row="5"
                                   Text="備註"
                                   VerticalAlignment="Top"
                                   Margin="0,10,0,0"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Foreground="{StaticResource SecondaryBrush}"
                                   Visibility="{Binding ShowOrderNote, Converter={StaticResource BoolToVisibility}}"/>
                        <TextBox Grid.Row="5" Grid.Column="1"
                                 Text="{Binding OrderNote, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Height="80"
                                 VerticalScrollBarVisibility="Auto"
                                 Padding="12,10"
                                 FontSize="16"
                                 Margin="0,0,0,12"
                                 Visibility="{Binding ShowOrderNote, Converter={StaticResource BoolToVisibility}}"/>

                        <!-- 狀態提示 - 不可點燈 -->
                        <Border Grid.Row="6" Grid.ColumnSpan="2"
                                CornerRadius="8"
                                Padding="14"
                                Margin="0,5,0,10"
                                BorderBrush="#E57373"
                                BorderThickness="1.5"
                                Visibility="{Binding CannotOrderReason, Converter={StaticResource NotNullToVisibility}}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#FFF0F0" Offset="0"/>
                                    <GradientStop Color="#FFE8E8" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#x2716;" FontSize="15" FontWeight="Bold" Foreground="#C62828" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding CannotOrderReason}"
                                           Foreground="#C62828"
                                           TextWrapping="Wrap"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- 狀態提示 - 可點燈 -->
                        <Border Grid.Row="6" Grid.ColumnSpan="2"
                                CornerRadius="8"
                                Padding="14"
                                Margin="0,5,0,10"
                                BorderBrush="#81C784"
                                BorderThickness="1.5"
                                Visibility="{Binding CanOrder, Converter={StaticResource BoolToVisibility}}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#F0FFF0" Offset="0"/>
                                    <GradientStop Color="#E8F5E9" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#x2714;" FontSize="15" FontWeight="Bold" Foreground="#2E7D32" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Text="可以點燈"
                                           Foreground="#2E7D32"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- 點燈按鈕 -->
                        <Button Grid.Row="7" Grid.ColumnSpan="2"
                                Content="&#x2726;  確認點燈  &#x2726;"
                                Command="{Binding CreateOrderCommand}"
                                IsEnabled="{Binding CanOrder}"
                                Style="{StaticResource PrimaryButton}"
                                Padding="20,14"
                                FontSize="16"
                                Margin="0,5,0,12"/>

                    </Grid>
                </StackPanel>
            </Border>

            <!-- 即將到期提醒 -->
            <Border Grid.Row="2"
                    CornerRadius="10"
                    Padding="15"
                    Margin="0,0,0,15"
                    MaxHeight="200"
                    BorderBrush="#E65100"
                    BorderThickness="1.5">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FFFCF5" Offset="0"/>
                        <GradientStop Color="#FFF8ED" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.12" Direction="270"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="&#x26A0;" FontSize="15" Foreground="#E65100" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="即將到期提醒（30天內）"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#E65100"/>
                    </StackPanel>

                    <!-- 表頭 -->
                    <Grid Grid.Row="1" Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="客戶" FontWeight="Bold" Foreground="{StaticResource SecondaryBrush}" FontSize="12"/>
                        <TextBlock Grid.Column="1" Text="燈種" FontWeight="Bold" Foreground="{StaticResource SecondaryBrush}" FontSize="12"/>
                        <TextBlock Grid.Column="2" Text="到期日" FontWeight="Bold" Foreground="{StaticResource SecondaryBrush}" FontSize="12"/>
                        <TextBlock Grid.Column="3" Text="剩餘" FontWeight="Bold" Foreground="{StaticResource SecondaryBrush}" FontSize="12"/>
                    </Grid>

                    <ItemsControl Grid.Row="2" ItemsSource="{Binding ExpiringOrders}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="6" Padding="6,8" Margin="0,0,0,4"
                                        BorderBrush="#FFE0B2" BorderThickness="1">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#FFFAF0" Offset="0"/>
                                            <GradientStop Color="#FFF3E0" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="90"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding CustomerName}" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{Binding LampName}" FontSize="12" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{Binding EndDate, StringFormat=yyyy/MM/dd}" FontSize="12" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="3"
                                                   Text="{Binding DaysLeft, StringFormat='{}{0}天'}"
                                                   Foreground="{Binding EndDate, Converter={StaticResource StatusToColor}}"
                                                   FontWeight="Bold" FontSize="12" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>

            <!-- 狀態列 -->
            <Border Grid.Row="3"
                    CornerRadius="8"
                    Padding="14,8"
                    BorderBrush="{StaticResource GoldDarkBrush}"
                    BorderThickness="1">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#FFF8ED" Offset="0"/>
                        <GradientStop Color="#FFF0D6" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#x2726;" FontSize="11" Foreground="{StaticResource GoldDarkBrush}" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding StatusMessage}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
