<UserControl x:Class="TempleLampSystem.Views.LampOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:TempleLampSystem.Converters"
             xmlns:helpers="clr-namespace:TempleLampSystem.Helpers">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
        <converters:OrderStatusToColorConverter x:Key="StatusToColor"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibility"/>
        <converters:NotNullToVisibilityConverter x:Key="NotNullToVisibility"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  helpers:SmoothScrollBehavior.IsEnabled="True">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 已選客戶資訊 -->
            <Border Grid.Row="0"
                    Background="White"
                    CornerRadius="8"
                    Padding="15"
                    Margin="0,5,0,15"
                    MaxHeight="350">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                </Border.Effect>
                <Grid>
                    <!-- 未選擇客戶時 -->
                    <StackPanel Visibility="{Binding SelectedCustomer, Converter={StaticResource NullToVisibility}}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <TextBlock Text="▲" FontSize="28" HorizontalAlignment="Center" Opacity="0.5"/>
                        <TextBlock Text="請從左側選擇客戶（按住 Ctrl 可多選）"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"/>
                    </StackPanel>

                    <!-- 已選擇客戶時 - 顯示多選客戶列表 -->
                    <ScrollViewer Visibility="{Binding SelectedCustomer, Converter={StaticResource NotNullToVisibility}}"
                                  VerticalScrollBarVisibility="Auto"
                                  MaxHeight="310">
                        <ItemsControl ItemsSource="{Binding SelectedCustomers}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FFF8F0"
                                            CornerRadius="6"
                                            Padding="10,8"
                                            Margin="0,0,0,5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="■" FontSize="14" Foreground="{StaticResource PrimaryBrush}" Margin="0,0,10,0" VerticalAlignment="Center"/>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock FontSize="14"
                                                           FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextPrimaryBrush}"
                                                           Text="{Binding Name}"/>
                                                <TextBlock Foreground="{StaticResource TextSecondaryBrush}"
                                                           FontSize="11">
                                                    <Run Text="Tel:"/>
                                                    <Run Text="{Binding DisplayPhone, Mode=OneWay}"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <Button Grid.Column="2"
                                                    Content="✕"
                                                    FontSize="12"
                                                    FontWeight="Bold"
                                                    Foreground="#999"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    VerticalAlignment="Center"
                                                    Padding="6,2"
                                                    ToolTip="移除此客戶"
                                                    Command="{Binding DataContext.RemoveSelectedCustomerCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- 點燈表單 -->
            <Border Grid.Row="1"
                    Background="White"
                    CornerRadius="8"
                    Padding="15"
                    Margin="0,0,0,15">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="新增點燈"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource SecondaryBrush}"
                               Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 燈種選擇 -->
                        <TextBlock Grid.Row="0"
                                   Text="燈種"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <ComboBox Grid.Row="0" Grid.Column="1"
                                  ItemsSource="{Binding Lamps}"
                                  SelectedItem="{Binding SelectedLamp}"
                                  DisplayMemberPath="LampName"
                                  FontSize="16"
                                  Padding="12,10"
                                  Margin="0,0,0,10"/>

                        <!-- 金額 -->
                        <TextBlock Grid.Row="1"
                                   Text="金額"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <Grid Grid.Row="1" Grid.Column="1" Margin="0,0,0,10">
                            <TextBox Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="10,8,40,8"/>
                            <TextBlock Text="元"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       Margin="0,0,15,0"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                        </Grid>

                        <!-- 狀態提示 - 不可點燈 -->
                        <Border Grid.Row="2" Grid.ColumnSpan="2"
                                Background="#FFEBEE"
                                BorderBrush="#FFCDD2"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,5,0,10"
                                Visibility="{Binding CannotOrderReason, Converter={StaticResource NotNullToVisibility}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="!" FontSize="16" FontWeight="Bold" Foreground="#C62828" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding CannotOrderReason}"
                                           Foreground="#C62828"
                                           TextWrapping="Wrap"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- 狀態提示 - 可點燈 -->
                        <Border Grid.Row="2" Grid.ColumnSpan="2"
                                Background="#E8F5E9"
                                BorderBrush="#C8E6C9"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,5,0,10"
                                Visibility="{Binding CanOrder, Converter={StaticResource BoolToVisibility}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="V" FontSize="16" FontWeight="Bold" Foreground="#2E7D32" Margin="0,0,10,0"/>
                                <TextBlock Text="可以點燈"
                                           Foreground="#2E7D32"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- 點燈按鈕 -->
                        <Button Grid.Row="3" Grid.ColumnSpan="2"
                                Content="確認點燈"
                                Command="{Binding CreateOrderCommand}"
                                IsEnabled="{Binding CanOrder}"
                                Style="{StaticResource SuccessButton}"
                                Padding="20,12"
                                FontSize="15"
                                Margin="0,5,0,10"/>

                        <!-- 列印按鈕 -->
                        <StackPanel Grid.Row="4" Grid.ColumnSpan="2"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <Button Content="預覽"
                                    Command="{Binding PreviewReceiptCommand}"
                                    Padding="15,8"
                                    Margin="0,0,8,0"/>
                            <Button Content="列印/PDF"
                                    Command="{Binding PrintLastOrderCommand}"
                                    Padding="15,8"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- 即將到期提醒 -->
            <Border Grid.Row="2"
                    Background="White"
                    CornerRadius="8"
                    Padding="15"
                    Margin="0,0,0,15"
                    MaxHeight="200">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="即將到期提醒（30天內）"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource WarningBrush}"
                               Margin="0,0,0,10"/>

                    <!-- 表頭 -->
                    <Grid Grid.Row="1" Margin="0,0,0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="客戶" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                        <TextBlock Grid.Column="1" Text="燈種" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                        <TextBlock Grid.Column="2" Text="到期日" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                        <TextBlock Grid.Column="3" Text="剩餘" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                    </Grid>

                    <ItemsControl Grid.Row="2" ItemsSource="{Binding ExpiringOrders}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FFFAF0" CornerRadius="4" Padding="4,6" Margin="0,0,0,3">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="90"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding CustomerName}" FontSize="12" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{Binding LampName}" FontSize="12" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{Binding EndDate, StringFormat=yyyy/MM/dd}" FontSize="12" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="3"
                                                   Text="{Binding DaysLeft, StringFormat='{}{0}天'}"
                                                   Foreground="{Binding EndDate, Converter={StaticResource StatusToColor}}"
                                                   FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>

            <!-- 狀態列 -->
            <TextBlock Grid.Row="3"
                       Text="{Binding StatusMessage}"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       FontSize="12"
                       Margin="5,5,0,0"/>
        </Grid>
    </ScrollViewer>
</UserControl>
