<Window x:Class="TempleLampSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:TempleLampSystem.Views"
        Title="點燈管理系統"
        Height="750"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左側：客戶搜尋 -->
        <GroupBox Grid.Column="0" Header="客戶搜尋" Margin="10" FontSize="14">
            <views:CustomerSearchView x:Name="CustomerSearchView"/>
        </GroupBox>

        <!-- 分隔線 -->
        <GridSplitter Grid.Column="1"
                      Width="5"
                      HorizontalAlignment="Stretch"
                      Background="#E0E0E0"/>

        <!-- 右側：點燈操作 -->
        <GroupBox Grid.Column="2" Header="點燈操作" Margin="10" FontSize="14">
            <views:LampOrderView x:Name="LampOrderView"/>
        </GroupBox>

        <!-- 底部狀態列 -->
        <StatusBar Grid.Row="1" Grid.ColumnSpan="3" Background="#E0E0E0">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <Ellipse x:Name="OnlineIndicator"
                             Width="10" Height="10"
                             Fill="Gray"
                             Margin="0,0,5,0"/>
                    <TextBlock x:Name="SyncStatusText" Text="檢查連線中..."/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="PendingSyncText" Text=""/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="CurrentTimeText" Text=""/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
